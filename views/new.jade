doctype html
html
  head
    meta(charset='utf-8')
  title new topics
  body
    h1
      a(href='/topic') Server Side Javascript
    ul
      each topic in topics
        li
          a(href='/topic/' + topic)= topic
    hr
    article
      form(action='/topic' method='POST')
        p
          input(type='text' name='title' placeholder='title')
        p
          textarea(name='description')
        p
          input(type='submit')
